<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="NightAdjusted.Theme.MistplayFeed" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.MistplayFeed" parent="NightAdjusted.Theme.MistplayFeed">
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.MistplayFeed.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.MistplayFeed</item>
    </style>
</resources>
